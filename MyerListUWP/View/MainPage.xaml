<base:BindablePage
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyerList"
    xmlns:base="using:MyerList.Base"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="using:MyerList.UC"
    x:Class="MyerList.MainPage"
    xmlns:converter="using:MyerList.Converter"
    DataContext="{Binding MainVM,Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <base:BindablePage.Resources>
        <converter:ShowDoneLineConverter x:Key="ShowDoneLineConverter" />
        <x:Double x:Key="PhoneButtonMinWidthSize">10</x:Double>
        <SolidColorBrush x:Key="CheckBoxBackgroundThemeBrush" Color="Transparent"/>
        <Thickness x:Key="PhoneBorderThickness">2.5</Thickness>
        <x:Double x:Key="TextStyleLargeFontSize">18.14</x:Double>
        <FontFamily x:Key="PhoneFontFamilyNormal">Segoe WP</FontFamily>
        <Thickness x:Key="CheckBoxAndRadioButtonTextPaddingThickness">8,0,0,0</Thickness>
        <x:Double x:Key="CheckBoxAndRadioButtonMinWidthSize">10</x:Double>
        <Thickness x:Key="PhoneTouchTargetLargeOverhang">0,16</Thickness>
        <SolidColorBrush x:Key="CheckBoxDisabledBackgroundThemeBrush" Color="Transparent"/>

        <DataTemplate x:Key="ScheduleTemplete">
            <uc:ScheduleControl />
        </DataTemplate>
        <AppBarButton x:Key="AddAppBarBtn" Icon="Add" Label="添加" Command="{Binding MainVM.AddCommand, Source={StaticResource Locator}}"/>
        <AppBarButton x:Key="SyncAppBarBtn"  Icon="Sync" Label="同步" Command="{Binding MainVM.SyncCommand, Source={StaticResource Locator}}"/>
        <AppBarButton x:Key="OkAppBarBtn" Icon="Accept" Label="添加" />
        <AppBarButton x:Key="CancelAppBarBtn"  Icon="Cancel" Label="同步" Command="{Binding MainVM.SyncCommand, Source={StaticResource Locator}}"/>
        <Style x:Key="ListViewItemStyle1" TargetType="ListViewItem">
            <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}"/>
            <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="TabNavigation" Value="Local"/>
            <Setter Property="IsHoldingEnabled" Value="True"/>
            <Setter Property="Margin" Value="0,0,18,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ListViewItemPresenter CheckHintBrush="{ThemeResource ListViewItemCheckHintThemeBrush}" CheckBrush="{ThemeResource ListViewItemCheckThemeBrush}" ContentMargin="4" ContentTransitions="{TemplateBinding ContentTransitions}" CheckSelectingBrush="{ThemeResource ListViewItemCheckSelectingThemeBrush}" DragForeground="{ThemeResource ListViewItemDragForegroundThemeBrush}" DragOpacity="{ThemeResource ListViewItemDragThemeOpacity}" DragBackground="{ThemeResource ListViewItemDragBackgroundThemeBrush}" DisabledOpacity="{ThemeResource ListViewItemDisabledThemeOpacity}" FocusBorderBrush="{ThemeResource ListViewItemFocusBorderThemeBrush}" HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}" Padding="{TemplateBinding Padding}" PointerOverBackgroundMargin="1" PlaceholderBackground="{ThemeResource ListViewItemPlaceholderBackgroundThemeBrush}" ReorderHintOffset="{ThemeResource ListViewItemReorderHintThemeOffset}" SelectedPointerOverBorderBrush="{ThemeResource ListViewItemSelectedPointerOverBorderThemeBrush}" SelectionCheckMarkVisualEnabled="True" SelectedForeground="{ThemeResource ListViewItemSelectedForegroundThemeBrush}" SelectedPointerOverBackground="#FFC3C3C3" SelectedBorderThickness="{ThemeResource ListViewItemCompactSelectedBorderThemeThickness}" VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" PointerOverBackground="#FFE6E6E6" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Storyboard x:Name="AddStory">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="grid">
                <DiscreteObjectKeyFrame KeyTime="0">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Visible</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
                <DiscreteObjectKeyFrame KeyTime="0:0:0.2">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Visible</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="grid">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Name="RemoveStory">
            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)" Storyboard.TargetName="grid">
                <DiscreteObjectKeyFrame KeyTime="0">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Visible</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
                <DiscreteObjectKeyFrame KeyTime="0:0:0.4">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Collapsed</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="grid">
                <SplineDoubleKeyFrame KeyTime="0" Value="1"/>
                <SplineDoubleKeyFrame KeyTime="0:0:0.4" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Color x:Key="MyerListLightNewBlue">#FF4369A2</Color>
        <Style x:Key="MyerListBtnStyleWithBackgrd" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Foreground" Value="Transparent" />
            <Setter Property="BorderThickness" Value="{ThemeResource PhoneBorderThickness}" />
            <Setter Property="FontFamily" Value="{ThemeResource PhoneFontFamilyNormal}" />
            <Setter Property="FontWeight" Value="{ThemeResource PhoneButtonFontWeight}" />
            <Setter Property="FontSize" Value="{ThemeResource TextStyleLargeFontSize}" />
            <Setter Property="Padding" Value="{ThemeResource PhoneButtonContentPadding}" />
            <Setter Property="MinHeight" Value="10" />
            <Setter Property="MinWidth" Value="10" />
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid x:Name="Grid" Background="Transparent">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualStateGroup.Transitions>
                                        <VisualTransition From="Pressed" To="PointerOver">
                                            <Storyboard>
                                                <PointerUpThemeAnimation Storyboard.TargetName="Grid" />
                                            </Storyboard>
                                        </VisualTransition>
                                        <VisualTransition From="PointerOver" To="Normal">
                                            <Storyboard>
                                                <PointerUpThemeAnimation Storyboard.TargetName="Grid" />
                                            </Storyboard>
                                        </VisualTransition>
                                        <VisualTransition From="Pressed" To="Normal">
                                            <Storyboard>
                                                <PointerUpThemeAnimation Storyboard.TargetName="Grid" />
                                            </Storyboard>
                                        </VisualTransition>
                                    </VisualStateGroup.Transitions>
                                    <VisualState x:Name="Normal" />
                                    <VisualState x:Name="PointerOver" >
                                        <Storyboard>
                                            <DoubleAnimation Duration="0" To="0.6" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ContentPresenter" />
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Border.Background)" Storyboard.TargetName="Border">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <SolidColorBrush Color="#FFB1B1B1"/>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <!--<PointerDownThemeAnimation Storyboard.TargetName="Grid"/>-->
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonPressedForegroundThemeBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <DoubleAnimation Duration="0" To="0.5" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="ContentPresenter" />
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(Border.Background)" Storyboard.TargetName="Border">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <SolidColorBrush Color="#FFE4E4E4"/>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="Foreground" Storyboard.TargetName="ContentPresenter">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonDisabledForegroundThemeBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="BorderBrush" Storyboard.TargetName="Border">
                                                <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonDisabledBorderThemeBrush}" />
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="On">
                                    <VisualStateGroup.Transitions>
                                        <VisualTransition GeneratedDuration="0" To="OnState">
                                            <Storyboard>
                                                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.Rotation)" Storyboard.TargetName="ContentPresenter">
                                                    <EasingDoubleKeyFrame KeyTime="0" Value="0" />
                                                    <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-45" />
                                                </DoubleAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualTransition>
                                        <VisualTransition From="OffState" GeneratedDuration="0">
                                            <Storyboard>
                                                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.Rotation)" Storyboard.TargetName="ContentPresenter">
                                                    <EasingDoubleKeyFrame KeyTime="0" Value="-45" />
                                                    <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0" />
                                                </DoubleAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </VisualTransition>
                                    </VisualStateGroup.Transitions>
                                    <VisualState x:Name="OnState" />
                                    <VisualState x:Name="OffState" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border x:Name="Border" BorderBrush="{TemplateBinding BorderBrush}">
                                <ContentPresenter x:Name="ContentPresenter" AutomationProperties.AccessibilityView="Raw" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}" RenderTransformOrigin="0.5,0.5">
                                    <ContentPresenter.RenderTransform>
                                        <CompositeTransform />
                                    </ContentPresenter.RenderTransform>
                                </ContentPresenter>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </base:BindablePage.Resources>
    
    <base:BindablePage.Background>
        <StaticResource ResourceKey="MyerListGray"/>
    </base:BindablePage.Background>

    <Grid Background="{StaticResource MyerListGray}">
        <Grid Background="{StaticResource MyerListLight}" >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <Grid x:Name="tileGrid" Grid.Row="1">
                <Grid x:Name="WideGrid"  HorizontalAlignment="Center" Height="150" VerticalAlignment="Center" Width="310" Grid.RowSpan="2" >
                    <Border x:Name="backgrd1" BorderThickness="0" Background="{StaticResource MyerListBlueLight}"/>
                    <Image HorizontalAlignment="Left" VerticalAlignment="Bottom" Source="Assets/MyerList-LOGO_500_tran_clip.png" Opacity="0.1" Height="32" Width="43" Margin="12,0,0,4"/>
                    <StackPanel Orientation="Vertical" Margin="0,0,65,29">
                        <TextBlock x:Name="Text0" TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,10,0,0" FontSize="16" Foreground="White" Text="文本Text" FontFamily="Microsoft YaHei UI"/>
                        <TextBlock x:Name="Text1" TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,5,0,0" FontSize="16" Foreground="White" Text="文本Text" FontFamily="Microsoft YaHei UI"/>
                        <TextBlock x:Name="Text2" TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,5,0,0" FontSize="16" Foreground="White" Text="文本Text" FontFamily="Microsoft YaHei UI"/>
                        <TextBlock x:Name="Text3" TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,5,0,0" FontSize="16" Foreground="White" Text="文本Text" FontFamily="Microsoft YaHei UI"/>

                    </StackPanel>
                    <Image Source="Assets/BadgeLogo.png" Margin="4,121,279,5"/>
                    <TextBlock Text="MyerList" TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="31,126,224,7" FontSize="13.333" Foreground="White"  FontFamily="Microsoft YaHei UI" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Vertical" Margin="0,0,12,0">
                        <TextBlock x:Name="Count1" TextWrapping="Wrap" Text="4" FontSize="93.333"  TextAlignment="Right" Foreground="White" FontWeight="Light" Height="127" FontFamily="Microsoft YaHei" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Bottom"/>
                        <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="TO-DO" Foreground="White" VerticalAlignment="Center" Margin="0,-30,5,0" FontWeight="Light" FontFamily="Microsoft YaHei" FontSize="13.333" HorizontalAlignment="Right"/>

                    </StackPanel>
                </Grid>
                <Grid x:Name="MediumGrid"  HorizontalAlignment="Center" Height="150" VerticalAlignment="Center" Width="150" >
                    <Border x:Name="backgrd2" BorderThickness="0" Background="{StaticResource MyerListBlueLight}"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom">
                        <TextBlock x:Name="textBlock2" TextWrapping="NoWrap" Text="TO-DO" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,0,5" FontWeight="SemiBold" FontFamily="Microsoft YaHei" FontSize="20"/>
                    </StackPanel>
                    <TextBlock x:Name="Count2" TextWrapping="Wrap" Text="10" FontSize="40" FontWeight="Bold" TextAlignment="Right" Foreground="White" Margin="0,0,5,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontFamily="Microsoft YaHei" Height="45"/>
                    <StackPanel Orientation="Vertical">
                        <TextBlock x:Name="Text00" TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,10,0,0" FontSize="16" Foreground="White" FontFamily="Microsoft YaHei UI" Text="TEXT"/>
                        <TextBlock x:Name="Text01" TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,5,0,0" FontSize="16" Foreground="White" FontFamily="Microsoft YaHei UI" Text="TEXT"/>
                        <TextBlock x:Name="Text02" TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,5,0,0" FontSize="16" Foreground="White" FontFamily="Microsoft YaHei UI" Text="TEXT"/>
                        <TextBlock x:Name="Text03" TextWrapping="NoWrap" TextTrimming="WordEllipsis" Margin="10,5,0,0" FontSize="16" Foreground="White" FontFamily="Microsoft YaHei UI" Text="TEXT"/>

                    </StackPanel>
                </Grid>
                <Grid x:Name="SmallGrid"  HorizontalAlignment="Center" Height="71" VerticalAlignment="Center" Width="71" Margin="50,215" >
                    <Border x:Name="backgrd3" BorderThickness="1" Background="{StaticResource MyerListBlueLight}"/>
                    <TextBlock x:Name="Count3" TextWrapping="Wrap" Text="4" VerticalAlignment="Center" FontSize="32" FontWeight="Light" TextAlignment="Right" Foreground="White" Margin="0,12,5,17" FontFamily="Microsoft YaHei"/>
                    <Image  HorizontalAlignment="Left" VerticalAlignment="Bottom" Source="Assets/Square71x71Logo.png" Height="50" Width="67" Margin="-1,0,0,11"/>
                </Grid>

            </Grid>

            <Grid x:Name="grid1" Grid.Row="2" Background="{StaticResource MyerListGray}" RenderTransformOrigin="0.5,0.5">
                <Grid.RenderTransform>
                    <CompositeTransform/>
                </Grid.RenderTransform>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Command="{Binding AddCommand}" BorderThickness="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="80" Style="{StaticResource MyerListBtnStyleWithBackgrd}" Margin="50,0,0,0" Background="{x:Null}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Padding="0">
                        <Grid Background="#FFF2F2F2">
                            <Border Background="#FFF2F2F2"/>
                            <Image Source="Assets/Icon/Add.png" Width="40" Height="40"/>
                        </Grid>
                    </Button>
                    <Button Style="{StaticResource MyerListBtnStyleWithBackgrd}" BorderThickness="0" Command="{Binding SyncCommand}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0" Background="{StaticResource MyerListGray}" Width="80" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Padding="0">
                        <Grid Background="#FFF2F2F2">
                            <Image Source="Assets/Icon/Refresh.png" Width="40" Height="40"/>
                        </Grid>
                    </Button>

                </StackPanel>

            </Grid>
            <Grid>
                <StackPanel VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
                    <Button Style="{StaticResource ButtonCommonStyle}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" VerticalAlignment="Center" Width="48" Height="48" Background="White" BorderBrush="{x:Null}" BorderThickness="0">
                        <Border Background="White" BorderBrush="White">
                            <Grid Width="40" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Border x:Name="border" Height="2" Width="25" Background="{StaticResource MyerListBlueLight}" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5">
                                    <Border.RenderTransform>
                                        <CompositeTransform/>
                                    </Border.RenderTransform>
                                </Border>
                                <Border x:Name="border1" Height="2" Width="25" Background="{StaticResource MyerListBlueLight}" VerticalAlignment="Center" Margin="0" Grid.Row="1" RenderTransformOrigin="0.5,0.5">
                                    <Border.RenderTransform>
                                        <CompositeTransform/>
                                    </Border.RenderTransform>
                                </Border>
                                <Border x:Name="border2" Height="2" Width="25" Background="{StaticResource MyerListBlueLight}" VerticalAlignment="Top" Margin="0" Grid.Row="2" RenderTransformOrigin="0.5,0.5">
                                    <Border.RenderTransform>
                                        <CompositeTransform/>
                                    </Border.RenderTransform>
                                </Border>
                            </Grid>
                        </Border>
                    </Button>

                    <StackPanel x:Name="stackPanel" RenderTransformOrigin="0.5,0.5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20,0,0,0" VerticalAlignment="Center">
                        <StackPanel.RenderTransform>
                            <CompositeTransform/>
                        </StackPanel.RenderTransform>
                        <TextBlock Text="Myer" FontSize="25" FontWeight="Light" FontFamily="Segoe WP" Foreground="{StaticResource MyerListBlueLight}" />
                        <TextBlock Text="List" FontSize="25" FontWeight="Bold" FontFamily="Segoe WP" Foreground="{StaticResource MyerListBlueLight}"/>
                    </StackPanel>

                    
                </StackPanel>

            </Grid>
            <Border Grid.Row="1" Background="White"/>
            <ListView x:Name="Listview" Grid.Row="1"
				ItemTemplate="{StaticResource ScheduleTemplete}"
				ItemsSource="{Binding MySchedules}" 
				ItemContainerStyle="{StaticResource ListViewItemStyle1}" 
				MaxWidth="600" 
                SelectionMode="None" 
                Margin="0,20,0,0" 
                Background="{StaticResource MyerListLight}"
                CanReorderItems="False"
                AllowDrop="False"
                CanDragItems="False" RenderTransformOrigin="0.5,0.5"
                 >
                <ListView.RenderTransform>
                    <CompositeTransform/>
                </ListView.RenderTransform>
            </ListView>
            <Grid HorizontalAlignment="Center" Grid.Row="1" Width="100" Margin="0"/>
            <StackPanel x:Name="stackPanel1" Orientation="Vertical"   Visibility="{Binding ShowNoItems}" Grid.RowSpan="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,100">
                <TextBlock x:Uid="WorkDoneTB" HorizontalAlignment="Center" TextWrapping="Wrap" Text="WORK DONE" VerticalAlignment="Center" Foreground="#FFADADAD" FontSize="26.667" Grid.Row="1" FontWeight="Light" FontFamily="Segoe WP"/>
                <TextBlock x:Uid="EnjoyTB" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Enjoy your day ;-)" VerticalAlignment="Center" Foreground="#FFADADAD" FontSize="26.667" Grid.Row="1" FontWeight="Light" FontFamily="Segoe WP"/>

            </StackPanel>
            <StackPanel Orientation="Vertical" x:Name="NoNetWorkGrid" Visibility="{Binding NoNetwork}" Margin="0,0,0,60" Grid.RowSpan="2" Grid.Row="1" Width="600" VerticalAlignment="Center">

                <TextBlock x:Uid="NoConnectionTB" HorizontalAlignment="Center" FontWeight="Light" TextWrapping="Wrap" Text="NO CONNECTION" VerticalAlignment="Bottom" Foreground="#FF959595" FontSize="53.333" FontFamily="Segoe WP"/>
                <TextBlock x:Uid="ConnectHintTB" HorizontalAlignment="Center" TextWrapping="Wrap" FontWeight="Light" Text="Connect to network to sync your todos ;-)" VerticalAlignment="Top" Foreground="#FF959595" FontSize="24" Margin="0" Grid.Row="1" TextAlignment="Center" FontFamily="Segoe WP"/>
                <Button  Command="{Binding RetryCommand}" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Grid.Row="1" Margin="20,0,20,0.5" Background="{x:Null}" BorderThickness="2" Height="50" FontSize="14.667" Style="{StaticResource MyerListButtonStyle}" BorderBrush="{x:Null}" Foreground="#FF6B6B6B">
                    <Border BorderBrush="{StaticResource MyerListBlue}" BorderThickness="2">
                        <TextBlock x:Uid="RetryTB" Text="RETRY" Foreground="{StaticResource MyerListBlue}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </Button>
            </StackPanel>
            <ProgressBar Visibility="{Binding IsLoading}" Height="10" VerticalAlignment="Top" Foreground="{StaticResource MyerListLight}" Grid.Row="1" IsIndeterminate="True" RenderTransformOrigin="0.5,0.5" >
                <ProgressBar.RenderTransform>
                    <CompositeTransform TranslateY="-30"/>
                </ProgressBar.RenderTransform>
            </ProgressBar>
            <Grid  x:Name="grid" RenderTransformOrigin="0.5,0.5" Margin="0" Grid.RowSpan="3" d:IsHidden="True" Visibility="Collapsed" >
                <Grid.RenderTransform>
                    <CompositeTransform/>
                </Grid.RenderTransform>
                <Border BorderBrush="Black" BorderThickness="1" Background="Black" Grid.RowSpan="3" Opacity="0.36">
                    <!--<Interactivity:Interaction.Behaviors>
                        <Core:EventTriggerBehavior EventName="PointerPressed">
                            <Media:ControlStoryboardAction Storyboard="{StaticResource RemoveStory}"/>
                        </Core:EventTriggerBehavior>
                    </Interactivity:Interaction.Behaviors>-->
                </Border>
                <Grid Grid.Row="1" Background="{StaticResource MyerListLight}" Margin="0,0,0,100" Height="200">
                    <Grid HorizontalAlignment="Center" Grid.RowSpan="4" Width="500">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" 
                                   Text="{Binding ModeTitle}" 
                                   VerticalAlignment="Center" 
                                   FontSize="30" Margin="0" Foreground="{StaticResource MyerListBlueLight}" FontWeight="Light"/>

                        <TextBox x:Uid="AddContentBox" Margin="0" 
                                 x:Name="AddContentBox"
                                 Text="{Binding NewMemo.Content, Mode=TwoWay}" 
                                 TextWrapping="Wrap" VerticalAlignment="Center" InputScope="Chat" PlaceholderText="e.g Go to bed early" BorderThickness="0" Background="#FFEAEAEA" BorderBrush="#FFEAEAEA" MaxWidth="600" HorizontalAlignment="Left" MaxLength="50" Width="444" Height="40" Grid.Row="1"/>
                        <StackPanel Orientation="Horizontal" Margin="0" Grid.Row="3">
                            <Button 
                                HorizontalAlignment="Left" 
                                VerticalAlignment="Top" 
                                BorderThickness="0" 
                                MinWidth="10"
                                MinHeight="10"
                                Command="{Binding OkCommand, Mode=OneWay}" 
                                Height="40" Style="{StaticResource MyerListButtonStyle}" Width="112" Margin="0,0,0,-7">
                                <Grid Background="{StaticResource MyerListBlueLight}" Width="112" >
                                    <TextBlock x:Uid="OkTB" Text="OK" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource MyerListLight}"/>
                                </Grid>
                            </Button>
                            <Button Height="40" Padding="0" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" MinHeight="10"  HorizontalAlignment="Right" VerticalAlignment="Top" Background="#FFE4E4E4" BorderThickness="0" MinWidth="10" Command="{Binding CancelCommand, Mode=OneWay}"  Style="{StaticResource MyerListButtonStyle}" Width="112" Margin="10,0,0,-7" Foreground="Black">
                                <Border Background="#FFE4E4E4">
                                    <TextBlock x:Uid="CancelTB" Text="CANCEL" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>

        </Grid>
        <uc:ToastUC d:IsHidden="True"  x:Name="ToastControl"/>
    </Grid>
</base:BindablePage>