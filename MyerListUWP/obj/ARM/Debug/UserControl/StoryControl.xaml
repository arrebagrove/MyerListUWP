<UserControl
    x:Class="MyerList.StoryControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScheduleUniversal.UserControl"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="700"
    d:DesignWidth="400">

    <StackPanel>
        <Grid Height="100" Background="{StaticResource MyerListBlueLight}">
            <TextBlock x:Uid="StoryTB" FontSize="35" Text="STH. YOU MAY WANT TO KNOW" FontWeight="Bold" Margin="10" TextWrapping="Wrap" Foreground="White" VerticalAlignment="Center">
            </TextBlock>

        </Grid>

        <TextBlock x:Uid="Q1TB" Text="WHY DOES MYERLIST SO SIMPLE?" TextWrapping="Wrap" FontWeight="Bold" Foreground="{StaticResource MyerListBlueLight}" FontSize="20" Margin="10,10,0,0"/>
        <TextBlock x:Uid="A1TB" Text="The reason that MyerList have some feature like alarm notification, is because of the Windows Phone 8.1 API .But mostly I think it would be better if MyerList is just a simple To-Do app without any other complex feature, just typing a sentence and show it to your Live Tile and sync over Windows devices." FontSize="18.667" FontWeight="Light" TextWrapping="Wrap" Foreground="{StaticResource MyerListDark}" Margin="10,10,0,0"/>
        <TextBlock  x:Uid="Q2TB" Text="ANY FEATURE PLAN?" TextWrapping="Wrap" FontWeight="Bold" Foreground="{StaticResource MyerListBlueLight}" FontSize="20" Margin="10,10,0,0"/>
        <TextBlock  x:Uid="A2TB" Text="Yes,of course. I may add the feature like taking note to the next big version of MyerList. But it is still in consideration." FontSize="18.667" FontWeight="Light" TextWrapping="Wrap" Foreground="{StaticResource MyerListDark}" Margin="10,10,0,0"/>
        <TextBlock  x:Uid="Q3TB" Text="HOW CAN I HELP YOU?" TextWrapping="Wrap" FontWeight="Bold" Foreground="{StaticResource MyerListBlueLight}" FontSize="20" Margin="10,10,0,0"/>
        <TextBlock x:Uid="A3TB" Text="Maintain this app cause effort and also money, if you do want to help developer, it will be appreciated that you donate some to my Alipay. My account is 18520944923. Thanks a lot." FontSize="18.667" FontWeight="Light" TextWrapping="Wrap" Foreground="{StaticResource MyerListDark}" Margin="10,10,0,0"/>

    </StackPanel>
</UserControl>

